# Authentication System Environment Variables
# Copy this file to .env.local and update the values

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-at-least-32-characters
JWT_ALGORITHM=HS256
JWT_ISSUER=vsr-landing
JWT_AUDIENCE=vsr-users
JWT_ACCESS_TOKEN_TTL=900
JWT_REFRESH_TOKEN_TTL=604800
JWT_EMAIL_VERIFICATION_TTL=86400
JWT_PASSWORD_RESET_TTL=3600

# Password Configuration
PASSWORD_MIN_LENGTH=8
PASSWORD_MAX_LENGTH=128
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true
PASSWORD_PREVENT_COMMON=true
PASSWORD_HASH_ROUNDS=12
PASSWORD_MAX_ATTEMPTS=5
PASSWORD_LOCKOUT_DURATION=900

# Security Configuration
SECURITY_RATE_LIMIT_ENABLED=true
SECURITY_RATE_LIMIT_WINDOW_MS=60000
SECURITY_RATE_LIMIT_MAX_REQUESTS=100
SECURITY_BRUTE_FORCE_ENABLED=true
SECURITY_BRUTE_FORCE_FREE_RETRIES=3
SECURITY_BRUTE_FORCE_MIN_WAIT=1000
SECURITY_BRUTE_FORCE_MAX_WAIT=300000
SECURITY_BRUTE_FORCE_LIFETIME=900000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Origin,X-Requested-With,Content-Type,Accept,Authorization,X-Fingerprint,X-Platform,X-Browser

# Session Configuration
SESSION_MAX_CONCURRENT=5
SESSION_TTL=86400
SESSION_EXTEND_ON_ACTIVITY=true
SESSION_REQUIRE_REAUTH=false
SESSION_REAUTH_INTERVAL=14400
SESSION_TRACK_DEVICES=true

# RBAC Configuration
RBAC_ENABLE_HIERARCHY=true
RBAC_ENABLE_INHERITANCE=true
RBAC_ENABLE_CONTEXTUAL_PERMISSIONS=true
RBAC_CACHE_PERMISSIONS=true
RBAC_CACHE_TTL=300000

# Database Configuration (if using a database)
DATABASE_URL=postgresql://username:password@localhost:5432/vsr_landing
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Configuration (for session storage and rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=vsr_auth:
REDIS_TTL=86400

# Email Configuration (for verification and password reset)
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@vsr-landing.com
EMAIL_FROM_NAME=VSR Landing

# Application Configuration
APP_NAME=VSR Landing
APP_URL=http://localhost:3000
APP_ENV=development
APP_DEBUG=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/auth.log
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_MAX_FILES=5

# Monitoring Configuration
MONITORING_ENABLED=true
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# Security Headers
CSP_ENABLED=true
CSP_REPORT_ONLY=false
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain
UPLOAD_PATH=./uploads
UPLOAD_TEMP_PATH=./temp

# API Rate Limiting
API_RATE_LIMIT_LOGIN_WINDOW=900000
API_RATE_LIMIT_LOGIN_MAX=5
API_RATE_LIMIT_REGISTER_WINDOW=3600000
API_RATE_LIMIT_REGISTER_MAX=3
API_RATE_LIMIT_REFRESH_WINDOW=300000
API_RATE_LIMIT_REFRESH_MAX=10
API_RATE_LIMIT_GENERAL_WINDOW=60000
API_RATE_LIMIT_GENERAL_MAX=100

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# Development/Testing
DEV_SKIP_EMAIL_VERIFICATION=false
DEV_MOCK_EMAIL_SERVICE=false
TEST_USER_EMAIL=test@vsr-landing.com
TEST_USER_PASSWORD=TestPassword123!

# Production Security
PRODUCTION_FORCE_HTTPS=true
PRODUCTION_SECURE_COOKIES=true
PRODUCTION_HIDE_ERROR_DETAILS=true